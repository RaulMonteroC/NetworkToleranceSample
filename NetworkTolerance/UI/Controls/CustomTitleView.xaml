<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkTolerance.UI.Controls.CustomTitleView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnPlatform iOS='*',Android='5.5*'}"/>
            <ColumnDefinition Width="{OnPlatform iOS='*',Android='4.5*'}"/>
        </Grid.ColumnDefinitions>
        <BoxView CornerRadius="5" VerticalOptions="Center" 
                 BackgroundColor="Black" HeightRequest="30" />
        <Label  x:Name="navTitle" Margin="3,0" FontSize="Medium"
                FontAttributes="Bold" HorizontalOptions="Center"
                VerticalOptions="Center" TextColor="White"/>
    </Grid>
    
</ContentView>